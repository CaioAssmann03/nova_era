{
  "name": "barbershop-api",
  "version": "1.0.0",
  "description": "API RESTful para gerenciamento de barbearia",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only src/app.ts",
    "docker:build": "docker build -t barbershop-api .",
    "docker:run": "docker run -p 3000:3000 --name barbershop-container barbershop-api",
    "docker:stop": "docker stop barbershop-container",
    "docker:remove": "docker rm barbershop-container",
    "docker:clean": "docker rmi barbershop-api",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:simple": "docker-compose -f docker-compose.simple.yml up -d",
    "docker:compose:logs": "docker-compose logs -f barbershop-api",
    "docker:compose:restart": "docker-compose restart barbershop-api"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
